  }
  .letter-row {
    display: flex;
    flex-flow: row wrap;
    justify-content: flex-start;
    align-items: center;
    gap: 0.5rem;
  }
  .tile {
    display: flex;
    flex-direction: column;
    width: 4.5rem;
    height: 4.5rem;
    background-color: #f7caca;
    border-color: #d2c4d6;
    border-style: solid;
    border-width: 1px;
    border-radius: 0.5rem;
  }
  .letter {
    font-size: 2.5rem;
    margin-top: -0.75rem;
    margin-bottom: -1rem;
    text-align: center;
    font-weight: 600;
  }
  .annotation {
    padding-left: 0.2rem;
    padding-right: 0.2rem;
    display: flex;
    justify-content: space-between;
    font-size: 1rem;
  }
</style>

<div class="letter-container not-content">
  {
    letters.map((row) => (
      <div class="letter-row">
        {row.map((letter) => (
          <div class="tile">
            <div class="letter">{letterdict[letter].letter}</div>
            <div class="annotation">
              <div>
                <b>{letterdict[letter].roman}</b>
              </div>
              <div>
                <em>{letterdict[letter].phonetic}</em>
              </div>
            </div>
          </div>
        ))}
      </div>
    ))
  }
</div>
